<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="AvaloniaSampleBinding.App"
             xmlns:views="clr-namespace:AvaloniaSampleBinding.Views"
             xmlns:viewModels="clr-namespace:AvaloniaSampleBinding.ViewModels"
             RequestedThemeVariant="Light">
    <Application.Styles>
        <FluentTheme/>
    </Application.Styles>
  <Application.DataTemplates>
    <DataTemplate DataType="{x:Type viewModels:MainViewModel}">
      <views:MainView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type viewModels:AuthViewModel}">
      <views:AuthView/>
    </DataTemplate>
  </Application.DataTemplates>
</Application>
